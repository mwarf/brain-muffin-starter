---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button, buttonVariants } from "@/components/ui/button.tsx";
import { Image } from "astro:assets";
import heroCharacter from "@/images/hero-character-transparent.png";
import heroBackground from "@/images/hero-background.png";
---

<BaseLayout> {/* Use default title/description from HeadSEO */}
  
  <!-- Hero Section -->
  <section class="container grid lg:grid-cols-2 items-center gap-10 py-16 md:py-24 relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 -z-20">
      <Image
        src={heroBackground}
        alt=""
        class="w-full h-full object-cover"
        format="webp"
        quality={80}
      />
      <div class="absolute inset-0 bg-black/30"></div>
    </div>

    <!-- Text Content Column -->
    <div class="relative flex flex-col items-start gap-4 p-8 z-10"> {/* Added z-10 to ensure text is above organic shape */}
      <h1 class="text-4xl font-extrabold tracking-tighter md:text-5xl lg:text-6xl">
        Your AI VFX Superpowers - Unlocked!
    </h1>
      <p class="text-muted-foreground max-w-[700px] text-lg md:text-xl">
        BrainMuffin is like having a Hollywood VFX team in your back pocket (minus the crazy budgets). We turbocharge documentary and aerial footage with AI magic that's actually fun to use.
      </p>
      <div class="flex gap-4">
        <a href="/contact" class={buttonVariants({ size: "lg" })}>
          Start Your Project
        </a>
        <a href="/services" class={buttonVariants({ variant: 'outline', size: "lg" })}>
          Explore Services
        </a>
      </div>
    </div>
    <!-- Mascot Image -->
    <div class="relative w-full max-w-md mx-auto lg:max-w-none lg:mx-0">
      <Image
        src={heroCharacter}
        alt="BrainMuffin mascot character"
        class="w-full h-auto object-contain"
        style="max-height: 500px;"
        format="webp"
        quality={90}
      />
    </div>
  </section>

  <!-- Services Overview -->
  <section class="container py-16 md:py-24 bg-secondary/30">
    <h2 class="text-3xl font-bold text-center mb-10">What We Do</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Service 1 Placeholder -->
      <div class="text-center">
        <div class="bg-muted h-16 w-16 rounded-full mx-auto mb-4 flex items-center justify-center">Icon</div>
    <h3 class="text-xl font-semibold mb-2">AI Video Wizardry</h3>
    <p class="text-muted-foreground mb-4">Transform shaky, noisy footage into buttery-smooth 4K with our AI enhancement spells</p>
        <a href="/services#service1" class={buttonVariants({ variant: 'link' })}>Learn More &rarr;</a>
      </div>
      <!-- Service 2 Placeholder -->
      <div class="text-center">
        <div class="bg-muted h-16 w-16 rounded-full mx-auto mb-4 flex items-center justify-center">Icon</div>
    <h3 class="text-xl font-semibold mb-2">Editing That Reads Your Mind</h3>
    <p class="text-muted-foreground mb-4">Our AI doesn't just cut - it understands pacing, emotion, and story flow</p>
        <a href="/services#service2" class={buttonVariants({ variant: 'link' })}>Learn More &rarr;</a>
      </div>
      <!-- Service 3 Placeholder -->
      <div class="text-center">
        <div class="bg-muted h-16 w-16 rounded-full mx-auto mb-4 flex items-center justify-center">Icon</div>
    <h3 class="text-xl font-semibold mb-2">Custom AI Tailored to You</h3>
    <p class="text-muted-foreground mb-4">Like a bespoke suit, but for making your videos look ridiculously good</p>
        <a href="/services#service3" class={buttonVariants({ variant: 'link' })}>Learn More &rarr;</a>
      </div>
    </div>
  </section>

  <!-- Portfolio Teaser -->
  <section class="container py-16 md:py-24">
    <h2 class="text-3xl font-bold text-center mb-10">Featured Work</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Project 1 Placeholder -->
      <div class="bg-muted aspect-video rounded-lg flex items-center justify-center">Project 1 Video/Image</div>
      <!-- Project 2 Placeholder -->
      <div class="bg-muted aspect-video rounded-lg flex items-center justify-center">Project 2 Video/Image</div>
    </div>
    <div class="text-center mt-8">
      <a href="/portfolio" class={buttonVariants({ variant: 'outline' })}>
        View Full Portfolio
      </a>
    </div>
  </section>

  <!-- About Snippet -->
  <section class="container py-16 md:py-24 bg-secondary/30">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Meet Your New Creative Sidekick</h2>
      <p class="text-muted-foreground text-lg mb-6">
        We're the quirky AI specialists at Coalbanks Creative who geek out over making your videos shine. Based in Lethbridge, fueled by coffee and impossible VFX challenges.
      </p>
      <a href="/about" class={buttonVariants()}>
        Meet the Team
      </a>
    </div>
  </section>

  <!-- Blog Teaser -->
  <section class="container py-16 md:py-24">
    <h2 class="text-3xl font-bold text-center mb-10">Brain Food (Our Blog)</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Blog Post 1 Placeholder -->
      <div class="border p-4 rounded-lg">
        <div class="bg-muted h-40 mb-4 rounded-md"></div>
        <h3 class="text-lg font-semibold mb-2">Blog Post Title 1</h3>
        <p class="text-sm text-muted-foreground mb-3">Short excerpt...</p>
        <a href="/blog/post1" class={buttonVariants({ variant: 'link', size: 'sm' })}>Read More &rarr;</a>
      </div>
      <!-- Blog Post 2 Placeholder -->
      <div class="border p-4 rounded-lg">
        <div class="bg-muted h-40 mb-4 rounded-md"></div>
        <h3 class="text-lg font-semibold mb-2">Blog Post Title 2</h3>
        <p class="text-sm text-muted-foreground mb-3">Short excerpt...</p>
        <a href="/blog/post2" class={buttonVariants({ variant: 'link', size: 'sm' })}>Read More &rarr;</a>
      </div>
      <!-- Blog Post 3 Placeholder -->
      <div class="border p-4 rounded-lg">
        <div class="bg-muted h-40 mb-4 rounded-md"></div>
        <h3 class="text-lg font-semibold mb-2">Blog Post Title 3</h3>
        <p class="text-sm text-muted-foreground mb-3">Short excerpt...</p>
        <a href="/blog/post3" class={buttonVariants({ variant: 'link', size: 'sm' })}>Read More &rarr;</a>
      </div>
    </div>
     <div class="text-center mt-8">
      <a href="/blog" class={buttonVariants({ variant: 'outline' })}>
        Visit the Blog
      </a>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="container py-16 md:py-24 text-center">
     <h2 class="text-3xl font-bold mb-4">Ready to Make Magic Together?</h2>
      <p class="text-muted-foreground text-lg mb-6 max-w-2xl mx-auto">
        Whether you're curious or ready to dive in, we'd love to chat about how AI can transform your videos. No salesy stuff - just real talk about what's possible.
      </p>
      <a href="/contact" class={buttonVariants({ size: "lg" })}>
        Get in Touch
      </a>
  </section>

</BaseLayout>
