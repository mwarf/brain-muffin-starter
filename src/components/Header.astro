---
import { buttonVariants } from "@/components/ui/button";
import ThemeToggle from "@/components/ThemeToggle.astro";
import MobileNav from "@/components/MobileNav";
---

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div
    class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <!-- Logo Placeholder -->
    <div class="flex items-center">
      <a href="/" class="flex items-center space-x-2">
        <img src="/bm-logo-horizontal-black.png" alt="BrainMuffin Logo" class="h-8 w-auto block dark:hidden" />
        <img src="/bm-logo-horizontal-reverse.png" alt="BrainMuffin Logo" class="h-8 w-auto hidden dark:block" />
      </a>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden flex-1 items-center justify-end space-x-4 md:flex">
      <a href="/" class={buttonVariants({ variant: 'ghost' })}>Home</a>
      <a href="/about" class={buttonVariants({ variant: 'ghost' })}>About</a>
      <a href="/services" class={buttonVariants({ variant: 'ghost' })}>Services</a>
      <a href="/portfolio" class={buttonVariants({ variant: 'ghost' })}>Portfolio</a>
      <a href="/blog" class={buttonVariants({ variant: 'ghost' })}>Blog</a>
      <a href="/contact" class={buttonVariants({ variant: 'ghost' })}>Contact</a>
      <ThemeToggle />
    </nav>

    <!-- Mobile Navigation -->
    <div class="flex flex-1 items-center justify-end md:hidden">
      <MobileNav client:load />
    </div>
  </div>
</header>
